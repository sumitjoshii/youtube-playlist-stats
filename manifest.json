{
  "manifest_version": 3,
  "name": "YouTube Playlist Stats",
  "version": "1.0",
  "description": "Enhance YouTube with playlist stats and notes.",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
